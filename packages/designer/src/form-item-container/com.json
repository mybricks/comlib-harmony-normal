{
  "title": "自定义表单项",
  "namespace": "mybricks.harmony.formItemContainer",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "description": "自定义表单项的容器，支持拖入其他任意组件搭建组合表单项",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",
  "preview": "https://assets.mybricks.world/t64W7x4jG01j8kyoWWb1EmK7plOSXbjp-1743580279531.png",
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置表单项的值，用于校验和提交，并触发值变化事件输出",
      "schema": {
        "type": "any"
      },
      "rels": ["setValueDone"]
    },
    {
      "id": "validate",
      "title": "校验",
      "desc": "触发表单项的校验检查，并输出校验结果",
      "schema": {
        "type": "any"
      },
      "rels": ["returnValidate"]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取表单项的值并输出",
      "schema": {
        "type": "any"
      },
      "rels": ["returnValue"]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空表单项的值",
      "schema": {
        "type": "any"
      },
      "rels": ["resetValueDone"]
    },
    {
      "id": "setDisabled",
      "title": "设置禁用",
      "desc": "禁用自定义表单项，阻止用户交互",
      "schema": {
        "type": "any"
      },
      "rels": ["setDisabledDone"]
    },
    {
      "id": "setEnabled",
      "title": "设置启用",
      "desc": "启用自定义表单项，允许用户交互",
      "schema": {
        "type": "any"
      },
      "rels": ["setEnabledDone"]
    },
    {
      "id": "isEnable",
      "title": "启用/禁用",
      "desc": "根据输入值控制自定义表单项启用/禁用，true-启用，false-禁用",
      "schema": {
        "type": "boolean"
      },
      "rels": ["isEnableDone"]
    }
  ],
  "outputs": [
    {
      "id": "onInitial",
      "title": "值初始化",
      "desc": "自定义表单项值初始化时触发，输出自定义表单项初始值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onChange",
      "title": "值更新",
      "desc": "自定义表单项值更新时触发，输出自定义表单项当前值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onValidate",
      "title": "校验触发",
      "desc": "自定义表单项校验时触发，输出自定义表单项当前值",
      "schema": {
        "title": "当前值",
        "type": "any"
      }
    },
    {
      "id": "returnValidate",
      "title": "校验结果",
      "desc": "输出自定义表单项校验结果",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "title": "校验状态",
            "type": "string",
            "description": "校验状态"
          },
          "help": {
            "title": "校验提示",
            "type": "string",
            "description": "校验提示"
          }
        }
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "desc": "输出自定义表单项当前值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setValueDone",
      "title": "设置值完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "resetValueDone",
      "title": "重置完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setDisabledDone",
      "title": "禁用完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setEnabledDone",
      "title": "启用完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "isEnableDone",
      "title": "启用/禁用完成",
      "schema": {
        "type": "boolean"
      }
    },
    {
      "id": "setOptionsDone",
      "title": "设置数据源输入完成",
      "schema": {
        "type": "any"
      }
    }
  ],
  "slots": [
    {
      "id": "formItem",
      "title": "自定义表单项",
      "type": "scope",
      "inputs": [
        {
          "id": "curValue",
          "title": "设置值",
          "schema": {
            "type": "any"
          }
        }
      ],
      "outputs": [
        {
          "id": "setCurValue",
          "title": "设置表单项值",
          "schema": {
            "type": "any"
          }
        }
      ]
    }
  ],
  "schema": ["mybricks.taro.formContainer/formItem", "*"]
}
