{
  "title": "容器",
  "namespace": "mybricks.harmony.containerBasic",
  "author": "MyBricks",
  "author_name": "板砖团队",
  "version": "1.0.1",
  "description": "基础布局组件，用于包裹和组织子组件，提供基础的样式和结构支持。",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "ai": "./ai.ts",
  "icon": "./icon.svg",
  "upgrade": "./upgrade.ts",
  "slots": [
    {
      "id": "content",
      "title": "插槽",
      "layout": "smart"
    }
  ],
  "outputs": [
    {
      "id": "onScroll",
      "title": "当容器滚动时",
      "schema": {
        "type": "object",
        "properties": {
          "xOffset": {
            "type": "number"
          },
          "yOffset": {
            "type": "number"
          },
          "scrollTop": {
            "type": "number"
          },
          "scrollLeft": {
            "type": "number"
          }
        }
      }
    },
    {
      "id": "onClick",
      "title": "点击"
    }
  ]
}