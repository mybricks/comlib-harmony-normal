{
  "title": "选择文件",
  "namespace": "mybricks.harmony._chooseFile",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "description": "选择文件，并返回本地文件的临时路径",
  "icon": "./icon.svg",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "runtime": "./runtime.tsx",
  "rtType": "js",
  "inputs": [
    {
      "id": "chooseFile",
      "title": "触发",
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "onSuccess",
      "title": "成功",
      "schema": {
        "type": "object",
        "properties": {
          "failedCount": {
            "description": "失败的文件数量",
            "type": "number"
          },
          "tempFiles": {
            "description": "临时文件列表",
            "type": "array",
            "items": {
              "description": "临时文件的详细信息",
              "type": "object",
              "properties": {
                "tempFilePath": {
                  "description": "临时文件的路径",
                  "type": "string"
                },
                "filename": {
                  "description": "文件名",
                  "type": "string"
                },
                "size": {
                  "description": "文件的大小，单位为字节",
                  "type": "number"
                },
                "fileType": {
                  "description": "文件的类型后缀，例如'jpg'",
                  "type": "string"
                },
                "atime": {
                  "description": "上次访问该文件的时间(秒)",
                  "type": "number"
                },
                "mtime": {
                  "description": "上次修改该文件的时间(秒)",
                  "type": "number"
                },
                "ctime": {
                  "description": "最近改变文件状态的时间(秒)",
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    {
      "id": "onFail",
      "title": "失败",
      "schema": {
        "type": "object",
        "properties": {
          "errMsg": {
            "type": "string"
          }
        }
      }
    },
    {
      "id": "onCancel",
      "title": "取消"
    }
  ]
}
