{
  "title": "计时器",
  "namespace": "mybricks.harmony.timer",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "icon": "./icon.svg",
  "version": "1.0.0",
  "description": "计时器",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "ai": "./ai.ts",
  "inputs": [
    {
      "id": "countDownTimeStamp",
      "title": "倒计时配置",
      "description":"格式为00:01:00,配置后将从此时间开始倒数",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "start",
      "title": "开始",
      "description":"开始计时",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "pause",
      "title": "暂停",
      "description":"暂停计时",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "finish",
      "title": "结束",
      "description":"结束计时",
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "finishCountDown",
      "title": "结束倒计时",
      "schema": {
        "type": "number"
      }
    },{
      "id": "currentTime",
      "title": "当前时间",
      "schema": {
        "type": "number"
      }
    }
  ]
}