{
  "title": "循环列表",
  "namespace": "mybricks.harmony.containerList",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "runtime": "./runtime.tsx",
  "runtime.edit": "./edit/runtime.tsx",
  "target.arkts": "@arkts/src/containerList.ets",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",
  "inputs": [
    {
      "id": "refreshDataSource",
      "title": "覆盖数据",
      "desc": "列表已有的数据也会被覆盖",
      "schema": {
        "title": "列表数据",
        "type": "array",
        "items": {
          "title": "列项数据",
          "type": "any"
        }
      }
    },
    {
      "id": "addDataSource",
      "title": "添加数据",
      "desc": "在列表数据的末尾插入添加的数据",
      "schema": {
        "title": "列表数据",
        "type": "array",
        "items": {
          "title": "列项数据",
          "type": "any"
        }
      }
    }
  ],
  "outputs": [
  ],
  "slots": [
    {
      "id": "item",
      "capacity": 1,
      "title": "列表项",
      "type": "scope",
      "inputs": [
        {
          "id": "itemData",
          "title": "当前项",
          "desc": "当前项展示内容",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "index",
          "title": "当前项序号",
          "desc": "当前项展示的序号",
          "schema": {
            "type": "number"
          }
        }
      ]
    }
  ]
}