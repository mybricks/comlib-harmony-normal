{
  "title": "地图",
  "namespace": "mybricks.harmony.petalMap",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "runtime.edit": "./edit/runtime.tsx",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "ai": "./ai.ts",
  "icon": "./icon.svg",
  "inputs": [
    {
      "id": "setPos",
      "title": "设置地图中心点",
      "description": "通过经纬度设置地图中心点",
      "schema": {
        "type": "object",
        "properties": {
          "longitude": {
            "title": "经度",
            "description": "经度",
            "type": "string"
          },
          "latitude": {
            "title": "纬度",
            "description": "纬度",
            "type": "string"
          }
        }
      },
      "rels": [
        "onSetPosOk"
      ]
    },
    {
      "id": "draw",
      "title": "绘制图形",
      "description": "清空已有的图形，绘制新的图形",
      "schema": {
        "type": "object"
      }
    },
    {
      "id": "addDraw",
      "title": "添加图形",
      "description": "保留已有的图形，添加新的图形",
      "schema": {
        "type": "object"
      }
    },
    {
      "id": "setScale",
      "title": "缩放地图",
      "description": "缩放级别，取值范围为 3-20（默认值16）",
      "schema": {
        "type": "number"
      }
    },
    {
      "id": "includePoints",
      "title": "根据点位缩放视野",
      "description": "根据所有点位坐标缩放视野",
      "schema": {
        "type": "object",
        "properties": {
          "points": {
            "title": "坐标点列表",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "longitude": {
                  "title": "经度",
                  "description": "经度",
                  "type": "string"
                },
                "latitude": {
                  "title": "纬度",
                  "description": "纬度",
                  "type": "string"
                }
              }
            }
          },
          "padding": {
            "title": "四周间距",
            "description": "四周间距",
            "type": "array"
          }
        }
      }
    },
    {
      "id": "setMarkers",
      "title": "设置标记点",
      "description": "设置地图上的标记点",
      "schema": {
        "type": "object",
        "properties": {
          "longitude": {
            "title": "经度",
            "description": "经度",
            "type": "string"
          },
          "latitude": {
            "title": "纬度",
            "description": "纬度",
            "type": "string"
          },
          "iconPath": {
            "title": "图标地址",
            "description": "图标的url地址",
            "type": "string"
          },
          "width": {
            "title": "图标宽度",
            "description": "图标宽度",
            "type": "string"
          },
          "height": {
            "title": "图标高度",
            "description": "图标高度",
            "type": "string"
          },
          "callout": {
            "title": "气泡",
            "type": "object",
            "properties": {
              "content": {
                "title": "气泡提示文本内容",
                "description": "气泡提示文本内容",
                "type": "string"
              },
              "color": {
                "title": "颜色",
                "description": "字体颜色",
                "type": "string"
              },
              "fontSize": {
                "title": "字体大小",
                "description": "字体大小",
                "type": "string"
              },
              "borderRadius": {
                "title": "边框圆角",
                "description": "边框圆角",
                "type": "string"
              },
              "borderWidth": {
                "title": "边框宽度",
                "description": "边框宽度",
                "type": "string"
              },
              "borderColor": {
                "title": "边框颜色",
                "description": "边框颜色",
                "type": "string"
              },
              "bgColor": {
                "title": "背景颜色",
                "description": "背景颜色",
                "type": "string"
              },
              "padding": {
                "title": "文本边缘留白",
                "description": "文本边缘留白",
                "type": "string"
              },
              "display": {
                "title": "显示方式",
                "description": "'BYCLICK':点击显示; 'ALWAYS':常显",
                "type": "string"
              },
              "textAlign": {
                "title": "对齐方式",
                "description": "文本对齐方式。有效值: left, right, center",
                "type": "string"
              }
            }
          }
        }
      },
      "rels": [
        "setMarkersOk"
      ]
    }
  ],
  "outputs": [
    {
      "id": "onSetPosOk",
      "title": "设置中心点成功",
      "schema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "id": "setMarkersOk",
      "title": "设置标记点成功",
      "schema": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "slots": [
    {
      "id": "content",
      "title": "内容"
    }
  ]
}