          },
          "description": {
            "title": "描述",
            "type": "string",
            "description": "描述(选填)"
          },
          "thumbnail": {
            "title": "缩略图",
            "type": "string",
            "description": "缩略图(选填)"
          }
        }
      }
    }
  ],
  "outputs": [
    {
      "id": "onSuccess",
      "title": "成功"
