{
  "title": "级联选择",
  "namespace": "mybricks.harmony.cascader",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "runtime": "./runtime.tsx",
  "runtime.edit": "./runtime.edit.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",

  "inputs": [
    {
      "id": "addDataSource",
      "title": "级联数据",
      "desc": "添加输入的级联数据",
      "schema": {
        "title": "级联数据",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "title": "名称",
              "desc":"名称",
              "type": "string"
            },
            "value": {
              "title": "值",
              "desc":"值",
              "type": "string"
            },
            "children": {
              "title": "子级",
              "desc":"子级",
              "type": "array"
            }
          }
        }
      }
    },
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置的值，并触发值变化事件输出",
      "schema": {
        "title": "选中项数组",
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  ],
  "slots": [],
  "outputs": [
    {
      "id": "onSelect",
      "title": "每当选择选项时",
      "schema": {
        "title": "选中项数组",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "title": "名称",
              "type": "string"
            },
            "value": {
              "title": "值",
              "type": "string"
            }
          }
        }
      }
    },
    {
      "id": "onChange",
      "title": "当选择完毕时",
      "schema": {
        "title": "选中项数组",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "title": "名称",
              "type": "string"
            },
            "value": {
              "title": "值",
              "type": "string"
            }
          }
        }
      }
    }
  ]
}
