{
  "title": "页面",
  "namespace": "mybricks.taro.systemPage",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.1",
  "runtime": "./runtime.tsx",
  "runtime.edit": "./runtimeEdit.tsx",
  "data": "./data.json",
  "upgrade": "./upgrade.ts",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",
  "inputs": [
    {
      "id": "cancelPulldown",
      "title": "停止下拉刷新"
    },
    {
      "id": "setShare",
      "title": "设置分享内容",
      "schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "title": "标题",
            "description":"分享卡片标题"
          },
          "path": {
            "type": "string",
            "title": "路径",
            "description":"页面路径"
          },
          "imageUrl": {
            "type": "string",
            "title": "图片地址",
            "description":"分享卡片图片地址"
          }
        }
      }
    }
  ],
  "outputs": [
    {
      "id": "pageDidShow",
      "title": "当页面重新显示时",
      "schema": {
        "type": "object"
      }
    },
    {
      "id": "pageDidHide",
      "title": "当页面隐藏时",
      "schema": {
        "type": "object"
      }
    },
    {
      "id": "pulldown",
      "title": "当下拉刷新时"
    }
  ],
  "slots": [
    {
      "id": "content",
      "title": "内容",
      "layout": "smart"
    }
  ]
}
