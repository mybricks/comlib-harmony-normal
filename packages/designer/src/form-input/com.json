{
  "title": "单行输入",
  "namespace": "mybricks.harmony.formInput",
  "author": "MyBricks",
  "author_name": "板砖团队",
  "version": "1.0.0",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",
  "preview": "https://assets.mybricks.world/MLkFdX7eFQLDoP0LInaxnOQOaOSuya7N-1743576494057.png",
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置表单项值",
      "schema": {
        "type": "string"
      },
      "rels": ["setValueComplete"]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取表单项值并输出",
      "schema": {
        "type": "string"
      },
      "rels": ["returnValue"]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空表单项值",
      "schema": {
        "type": "any"
      },
      "rels": ["resetValueComplete"]
    },
    {
      "id": "setLabel",
      "title": "设置标题",
      "desc": "设置表单项标题，仅当表单项在表单容器内时生效",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setPlaceholder",
      "title": "设置提示内容",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setDisabled",
      "title": "设置是否禁用",
      "desc": "设置表单项是否禁用，传入 true 时禁用表单项，传入 false 时启用表单项",
      "schema": {
        "type": "boolean"
      }
    }
  ],
  "outputs": [
    {
      "id": "onChange",
      "title": "当值变化",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "onBlur",
      "title": "当失去焦点",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "onConfirm",
      "title": "当点击确定",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setValueComplete",
      "title": "设置值完成",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "resetValueComplete",
      "title": "重置值完成",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setDisabledComplete",
      "title": "是否禁用设置完成",
      "schema": {
        "type": "boolean"
      }
    }
  ],
  "schema": ["mybricks.taro.formContainer/formItem", "*"]
}
